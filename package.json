{
  "name": "omnomcom-application",
  "version": "1.2.0",
  "description": "Electron powered OmNomCom application",
  "repository": {
    "type": "git",
    "url": "https://github.com/saproto/OmNomCom-App/"
  },
  "main": "main.js",
  "author": "Jesse Visser",
  "private": true,
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --windows",
    "release": "electron-builder --windows --publish always"
  },
  "build": {
    "appId": "saproto.omnomcom",
    "productName": "OmNomCom Application",
    "icon": "build/icon.ico"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "update-electron-app": "^3.1.1"
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.7.0"
  }
}
